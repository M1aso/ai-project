# AI Project - Local Development Environment Variables
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/aiproject

# Cache Configuration  
REDIS_URL=redis://localhost:6379

# Message Queue Configuration
RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# Object Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin123456
MINIO_SECURE=false

# Authentication Configuration
JWT_SECRET=local-dev-jwt-secret-not-for-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Application Configuration
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# Service Ports
AUTH_PORT=8001
PROFILE_PORT=8002
CONTENT_PORT=8003
NOTIFICATIONS_PORT=8004
CHAT_PORT=8005
ANALYTICS_PORT=8006

# External API Configuration (Optional - for testing)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# TELEGRAM_BOT_TOKEN=your-bot-token

# Development Tools
# Set to true to enable debug features
DEBUG_MODE=true
