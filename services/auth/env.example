# Authentication Service Environment Configuration

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-use-openssl-rand-base64-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_TTL=3600
REFRESH_TOKEN_TTL=2592000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/auth_db
# For SQLite (development): DATABASE_URL=sqlite:///./auth.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
SQL_DEBUG=false

# Redis Configuration (for rate limiting and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=3600

# Session Management
SESSION_TTL=2592000

# Security
BCRYPT_ROUNDS=12

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# Application Settings
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
